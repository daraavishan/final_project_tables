<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All user top artist images
    </h1>

    <a href="/user_top_artist_images/new" class="btn btn-block btn-outline-secondary">
      Add a new user top artist image
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "user_top_artist_image_templates/user_top_artist_images_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Image url
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @user_top_artist_images.each do |user_top_artist_image| %>
      <tr>
        <td>
          <%= user_top_artist_image.id %>
        </td>

        <td>
          <% if user_top_artist_image.user.present? %>
            <a href="/users/<%= user_top_artist_image.user.id %>">
              <%= user_top_artist_image.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= user_top_artist_image.image_url %>
        </td>

        <td>
          <%= time_ago_in_words(user_top_artist_image.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(user_top_artist_image.updated_at) %> ago
        </td>

        <td>
          <a href="/user_top_artist_images/<%= user_top_artist_image.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @user_top_artist_images, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
